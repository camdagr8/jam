<form id="admin-form" action="<%=baseurl%>/admin/template" method="post">

	<input type="hidden" name="nonce" value="<%=nonce%>" />
	<input type="hidden" name="objectId" value="<%=rec['objectId']%>" />

	<div class="mb-l"><h5><i class="lnr-pencil ico"></i> Template Editor</h5></div>

	<div class="d-flex flex-xs-column flex-sm-column flex-lg-column flex-xl-row justify-content-start align-items-stretch">
		<div class="mb-s">

			<div class="input-group mb-l">
				<span class="input-group-addon bgc-white" style="width: 46px;"><i class="lnr-file-empty"></i></span>
				<input type="text" class="form-control form-control-lg pl-s" placeholder="Template Name" name="name" autocomplete="off" value="<%=rec['name']%>" />
				<span class="input-group-addon bgc-white" style="width: 50px;" data-toggle="popover" data-placement="left" title="Template Name" data-trigger="hover" data-content="The name of the template as it will appear in the page editor."><i class="lnr-question-circle"></i></span>
			</div>

			<div class="card card-shadow bgc-white bd-0 mb-l">
				<h6 class="card-header" style="margin-bottom: -1px;"><i class="lnr-file-code ico"></i> File</h6>

				<ul class="list-group list-group-flush">
					<li class="list-group-item">
						<div class="input-group">
							<input type="text" class="form-control" name="id" value="<%=rec['id']%>" readonly />
							<div class="input-group-btn">
								<button type="button" class="btn btn-primary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 50px;">
									<i class="lnr-chevron-down"></i>
								</button>
								<div class="dropdown-menu dropdown-menu-right">
									<% templates.forEach((file) => { -%>
									<a class="dropdown-item <%=(file === rec['id']) ? 'active' : ''%>" href="#" data-dropdown-select="input[name='id']"><%=file%></a>
									<% }); -%>
								</div>
							</div>
						</div>
					</li>
				</ul>
			</div>

			<div class="card card-shadow bgc-white bd-0 mb-l">
				<h6 class="card-header" style="margin-bottom: -1px;"><i class="lnr-cube ico"></i> Metaboxes</h6>

				<ul class="list-group list-group-flush">
					<li class="list-group-item">
						<div class="input-group">
							<span class="input-group-addon bgc-gray-lightest">
								Type:
							</span>
							<span class="input-group-addon bgc-white">
								<label><input type="radio" class="mr-xs" aria-label="html" name="metaboxType" id="metabox-type-html" value="html" checked /> HTML</label>
							</span>
							<span class="input-group-addon bgc-white">
								<label><input type="radio" class="mr-xs" aria-label="plain text" name="metaboxType" id="metabox-type-text" value="text" /> Plain Text</label>
							</span>
							<span class="input-group-addon bgc-gray-lightest">ID:</span>
							<input type="text" class="form-control" id="metabox-id" name="metaboxName" />
							<span class="input-group-btn">
								<button id="metabox-clone" class="btn btn-primary" type="button" style="width: 50px;" data-clone="#metabox-hbs" data-target="#admin-template-metaboxes" data-input="input[name='metaboxName'], input[name='metaboxType']:checked">
									<i class="lnr-plus"></i>
								</button>
							</span>
						</div>
					</li>
				</ul>

				<ul class="list-group list-group-flush" id="admin-template-metaboxes" style="margin-top: -1px;">
					<% if (rec['metabox']) { rec.metabox.forEach((item) => { -%>
					<li class="list-group-item">
						<div class="input-group">
							<span class="input-group-btn">
								<button class="btn btn-secondary" type="button" style="width: 50px;" data-target=".list-group-item" data-remove><i class="lnr-cross"></i></button>
							</span>
							<input type="text" class="form-control" name="metabox[][name]" value="<%=item.name%>" />
							<input type="hidden" class="form-control" name="metabox[][type]" value="<%=item.type%>" />
						</div>
					</li>
					<% }); } -%>
				</ul>

			</div>

		</div>
		<aside>
			<div class="mb-l">
				<button
					type="button"
					class="btn btn-primary btn-block btn-lg text-uppercase"
					data-label="Save Page"
					data-confirm="Are you sure?"
					data-submit='Saving...'>Save Template</button>
			</div>
		</aside>
	</div>
</form>

<script id="metabox-hbs" type="text/x-handlebars-template">
	<li class="list-group-item">
		<div class="input-group">
			<span class="input-group-btn">
				<button class="btn btn-secondary" type="button" style="width: 50px;" data-target=".list-group-item" data-remove><i class="lnr-cross"></i></button>
			</span>
			<input type="text" class="form-control" name="metabox[][name]" value="{{metaboxName}}" />
			<input type="hidden" class="form-control" name="metabox[][type]" value="{{metaboxType}}" />
		</div>
	</li>
</script>
