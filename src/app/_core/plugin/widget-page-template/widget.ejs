<div class="card card-shadow bgc-white bd-0">
	<h6 class="card-header" style="margin-bottom: -1px;"><i class="lnr-file-code ico"></i> Template</h6>
	<ul class="list-group list-group-flush" data-toggle="check">
		<li class="list-group-item">
			<select class="form-control" id="admin-template-select" name="template">
				<option value="">Select</option>
				<% jam.template_files.forEach((item) => { %>
                <% if (item.hasOwnProperty('id')) { %>
				<option value="<%=item.id%>" <%-(rec['template'] === item.id) ? 'selected' : '' %>><%=item.name%></option>
                <% } else { %>
                <option value="<%=item.name%>" %> <%-(rec['template'] === item.name) ? 'selected' : '' %>><%=item.name%></option>
                <% } %>
				<% }); %>
			</select>
		</li>
	</ul>
	<div class="card-footer bgc-white" style="margin-top: -1px;">
		<button type="button" class="btn btn-outline-secondary btn-block text-uppercase" data-preview="">Preview</button>
	</div>
</div>
