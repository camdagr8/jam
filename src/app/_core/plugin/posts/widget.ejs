<li class="list-menu-heading <%=(jam.url[1] === 'post' || jam.url[1] === 'posts') ? 'active' : ''%>" data-toggle="collapse" href="#admin-menu-collapse-<%=index%>" aria-expanded="true" aria-controls="admin-menu-collapse-<%=index%>">
    <span class="badge badge-info"><%=jam.plugin.posts.pagination.count%></span><h6><i class="lnr-pushpin ico"></i>Posts</h6>
</li>
<li class="list-sub-menu collapse show" id="admin-menu-collapse-<%=index%>" aria-expanded="true">
    <ul class="list-sub-menu">
        <li>
            <a href="<%=jam.baseurl%>/admin/post" class="list-menu-item menu-add">New Post</a>
        </li>
        <% if (jam.plugin.posts.recent.length > 0) { %>
        <li class="list-menu-heading active sub-active" >
            <h6 style="font-size: 12px;"><i class="lnr-history2 ico"></i>Recent Posts</h6>
        </li>
        <% jam.plugin.posts.recent.forEach((item) => { %>
        <li><a href="<%=item.edit_url%>" class="list-menu-item"><%-item.title.substr(0, 20)%><%-(item.title.length > 20) ? '&hellip;' : ''%></a></li>
        <% }); %>
        <% } %>
        <li>
            <a href="<%=jam.baseurl%>/admin/posts" class="list-menu-item">View All</a>
        </li>
    </ul>
</li>
